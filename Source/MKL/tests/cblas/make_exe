#===============================================================================
!INCLUDE cblas.lst

build: install $T

exe: $(E:+=.exe)

res: exe $(E:+=.res)

install:
	set path=%path%;..\..\..\..\$(_IA)\bin
	set lib=%lib%;..\..\..\..\$(_IA)\lib
	if not exist _results\$Y\res md _results\$Y\res
	cd _results\$Y
        copy ..\..\in\cblas.in
#------------------------------------------------------------------------------
FCOMPILER = fl32 /iface=(cref,nomixed_str_len_arg) /threads /map /exe

!  IF "$F"=="intel"
FCOMPILER = ifl /w /MT /Fm /Fe
!  ELSEIF "$F"=="intel64"
FCOMPILER = efl /w /MT /Fm /Fe
!  ENDIF
#------------------------------------------------------------------------------
.SUFFIXES:: .f .exe .res

{..\..\..\blas\source}.f.exe:
	$(FCOMPILER) $< ..\..\..\blas\source\mkl_cwrp.lib $(MKL_LIB:+=.lib)

.exe.res:
	if exist ..\..\..\blas\in\$(@B).in ($< <..\..\..\blas\in\$(@B).in) else $< >$(@B).sum
	if exist $(@B).s?? copy $(@B).s?? res & del $(@B).s??
	if exist work.* del /q work.*
