#===============================================================================
build: install $T

exe: $(E:+=.exe)

res: exe $(E:+=.res)

install:
	set path=%path%;..\..\..\..\$(_IA)\bin
	set lib=%lib%;..\..\..\..\$(_IA)\lib
	if not exist _results\$Y\res md _results\$Y\res
	cd _results\$Y
#-------------------------------------------------------------------------------
CCOMPILER = cl /w /MT /Fm /Fe

!  IF "$F"=="intel"
CCOMPILER = icl /w /MT /Fm /Fe
!  ELSEIF "$F"=="intel64"
CCOMPILER = ecl /w /MT /Fm /Fe
!  ENDIF
#-------------------------------------------------------------------------------
.SUFFIXES:: .c .exe .res

{..\..\source}.c.exe:
	$(CCOMPILER) /Od /D$(_IA) $< ..\..\source\fftcsamp.c $(MKL_LIB:+=.lib)

.exe.res:
	$< ..\..\in\$(@B).in
	if exist $(@B).s?? copy $(@B).s?? res & del $(@B).s??
